@model WebApplicationHotelApp.Models.Factura.Factura

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<h4>Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nit_Hotel" class="control-label"></label>
                <input asp-for="Nit_Hotel" class="form-control" />
                <span asp-validation-for="Nit_Hotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Hotel" class="control-label"></label>
                <input asp-for="Nombre_Hotel" class="form-control" />
                <span asp-validation-for="Nombre_Hotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Cliente" class="control-label"></label>
                <input asp-for="Nombre_Cliente" class="form-control" />
                <span asp-validation-for="Nombre_Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula_Cliente" class="control-label"></label>
                <input asp-for="Cedula_Cliente" class="form-control" />
                <span asp-validation-for="Cedula_Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio_Pagar" class="control-label"></label>
                <input asp-for="Precio_Pagar" class="form-control" />
                <span asp-validation-for="Precio_Pagar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdReserva" class="control-label"></label>
                <input asp-for="IdReserva" class="form-control" />
                <span asp-validation-for="IdReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al maestro de facturas</a>
</div>

