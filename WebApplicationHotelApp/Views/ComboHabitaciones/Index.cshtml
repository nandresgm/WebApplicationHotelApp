            <td>
                @Html.DisplayFor(modelItem => item.NotasAdicionales)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoPromo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpcionesPersonalizadas)
