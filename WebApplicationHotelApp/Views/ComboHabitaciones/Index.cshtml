@model IEnumerable<WebApplicationHotelApp.Models.ComboHabitaciones.ComboHabitacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Maestro Combo Habitaciones</h1>

<p>
    <a asp-action="Create">Crear nuevo combo habitaciones</a>
</p>
<table class="table" style="color: #ffffff;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCombo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DuracionEstadia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comodidades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidad)
