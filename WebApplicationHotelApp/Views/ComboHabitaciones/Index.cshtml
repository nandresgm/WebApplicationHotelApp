            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotasAdicionales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoPromo)
